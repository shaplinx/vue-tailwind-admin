{
  "compilerOptions": {
    "skipLibCheck": true,
    "isolatedModules": true,
    "target": "esnext",
    "module": "esnext",
    "allowJs":true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/hooks/tailwind/mediaQuerry.js"],
  "exclude": ["node_modules", ".github", ".history", "dist"]
}